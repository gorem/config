bind "set completion-ignore-case on"
PS1="\u \w $ "
function quad {
	if [[ $@ ]]; then
		for var in "$@"
		do
			grep -ri --color=auto "$var" "/Users/mike/Code/Scriptures"
		done
	else
		cd ~/Code/Scriptures/
	fi
}
function jour {
    mthyr=`date +"%B %Y"`
    emacs -nw ~/Dropbox/write/"$mthyr".txt
}
